<!doctype html>
<html class="no-js" lang="en" ng-app="SkimiaProjectManager">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title ng-bind="$state.current.title + ' | Skimia Project Manager'">SPM</title>
  {% stylesheets 
    'ccss/*.css' 
    '@SkimiaAngularBundle/Resources/public/css/loading-bar.css'
    '@SkimiaAngularBundle/Resources/public/css/flash-message.css'
    filter='cssrewrite' %}
    <link rel="stylesheet" href="{{ asset_url }}" />
  {% endstylesheets %}
</head>
<body ng-controller="MainCtrl">
  <div class="contain-to-grid sticky">
    <nav class="top-bar" data-topbar data-options="is_hover: false" style="margin-bottom:20px;">
      <ul class="title-area">
        <li class="name">
          <h1><a href="#/home">Skimia Project Manager</a></h1>
        </li>
      </ul>

      <section class="top-bar-section">
        {% verbatim %}
        <!-- Right Nav Section -->
        <ul class="right">
              <div ng-show="user.authenticated">
                <li class="has-dropdown active">
                    <a href="#">{{user.name}}</a>
                    <ul class="dropdown">
                        <li><a href="#"  ng-click="logout()">DÃ©connecter</a></li>
                    </ul>
                </li>
              </div>
              <div ng-show="!user.authenticated">
                <li class="has-dropdown active">
                    <a>Connexion</a>
                    <ul class="dropdown" style="min-width: 200px">
                        <li>
                        <form name="" ng-submit="login()" method="post" action="">
                            <label>Identifiant
                                <input type="text" ng-model="auth['ident']"/>
                            </label>
                            <label style="padding-bottom: 20px">Mot de Passe
                                <input type="password" ng-model="auth['password']"/>
                            </label>
                            <a href="#" ng-click="login()" class="button" style="top:0">Connexion</a>
                        </form>
                        </li>
                    </ul>
                </li>
              </div>
          </li>
        </ul>
        {% endverbatim %}
        <!-- Left Nav Section -->
        <ul class="left">
          <li class="has-form">
            <a href="#/about" class="button">v {{version}}.{%verbatim%}{{getRev()}}{%endverbatim%}</a>
          </li>
          <li class="divider"></li>
          <li><a href="#/announcement">Annonces</a></li>
          <li class="divider"></li>
          <li class="has-dropdown">
            <a href="#/projects">Projets</a>
            <ul class="dropdown">
                <li ng-repeat="project in projects">
                    {% verbatim %}<a href="#/project/{{project.id}}">{{project.name}}</a>{% endverbatim %}
                </li>
            </ul>
          </li>
          
        </ul>
      </section>
    </nav>
  </div>
        {% verbatim %}
        <message-center></message-center>
        {% endverbatim %}
  <div ui-view>

  </div>

  {{app_javascript()}}
</body>
</html>