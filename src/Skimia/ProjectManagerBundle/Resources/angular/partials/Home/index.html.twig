    </div>
  </div>
  <div class="row">
    <div class="large-6 columns">
      <div class="panel">
      <h3>Annonces</h3> 
      {% verbatim %}
      <h3 ng-repeat="announcement in announcements">
        <a href="#/announcement/{{announcement.id}}">
          <small>{{announcement.title}}</small>
        </a>
      </h3>
      {% endverbatim %}
      </div>
    </div>
    <div class="large-6 columns">
      <div class="panel">
        <h3>Projets</h3>  
