        {% verbatim %}
        <ul class="side-nav">
            <li ng-repeat="project in projects">
                <a href="#/project/{{project.id}}">{{project.name}}</a>
            </li>
        </ul>
        {% endverbatim %}
      </div>
      <div class="panel">
        <h3>Bundles</h3>  
          {% verbatim %}
          <ul class="side-nav">
              <li ng-repeat="bundle in bundles">
                  <a href="#/bundle/{{bundle.id}}">{{bundle.name}}</a>
              </li>
          </ul>
          {% endverbatim %}
      </div>
    </div>
  </div>