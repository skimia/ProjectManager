<form ng-submit="login()">
	<div class="modal-header">
	    <h3>{%verbatim%}{{title|translate}}{%endverbatim%}</h3>
	</div>
	<div class="modal-body">
		<div class="form-group">
	    	<label for="ident" translate="security.login.username"></label>
	    	<input id="ident" type="text" ng-model="auth['ident']" required="required"/>
	    </div>
	    <div class="form-group">
	    	<label for="password" translate="security.login.password"></label>
	    	<input id="password" type="password" ng-model="auth['password']" required="required"/>
	    </div>
	    <div class="checkbox">
	    	<label>
	      		<input id="remember" type="checkbox" ng-model="auth['remember']"/><span translate="security.login.remember_me"></span>
	    	</label>
	  	</div>
	</div>
	<div class="modal-footer">
		<button type="submit" class="btn btn-success"><i class="fa fa-user"></i> <span translate="security.login.submit"></span></button>
	</div>
</form>