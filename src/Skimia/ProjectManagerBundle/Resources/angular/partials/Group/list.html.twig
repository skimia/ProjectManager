{% verbatim %}
<div class="color red first">
  <div class="row">
    <div class="large-12 columns" ng-show="!groupLoaded">
        <div class="loader">
          <span></span>
          <span></span>
          <span></span>
        </div>
    </div>
    <div class="large-12 columns" ng-show="groupLoaded">
      <div class="panel row marbot-20" ng-show="groups.length == 0">
        <h2>Aucun Groupe</h2>
      </div>
    </div>
    <div ng-repeat="group in groups" class="large-12 columns">
      <div class="panel row marbot-20">
        <div class="large-12 columns">
          <h3>{{group.name}}</h3>
          <ul class="inline-list" ng-show="user.id == group.main_user.id">
            <li><a href="{{$state.href('spm.group.edit',{groupId: group.id})}}">Editer</a></li>
            <li><a href="{{$state.href('spm.group.delete',{groupId: group.id})}}">Supprimer</a></li>
          </ul>
          <ul class="inline-list">
            <li ng-show="group.public">Public</li>
            <li ng-show="!group.public">Priv√©</li>
            <li ng-show="group.openned">Ouvert</li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="linen">
  <div class="row">
    <div class="large-12 columns">
      <div class="panel">
        <ul class="side-nav">
          <li class="active">Operations</li>
          <li><a href="{{$state.href('spm.group.create')}}">Creer un groupe</a></li>
        </ul>
      </div>
    </div>
  </div>
</div>
{% endverbatim %}