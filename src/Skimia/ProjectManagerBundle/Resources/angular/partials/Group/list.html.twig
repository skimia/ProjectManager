{% verbatim %}
<div class="color red first">
  <div class="row">
    <div class="col-md-12">
      <div class="well" ng-show="groups.length == 0">
        <h2>Aucun Groupe</h2>
      </div>
    </div>
    <div ng-repeat="group in groups" class="col-md-12">
      <div class="well row marbot-20">
        <div class="col-md-12">
          <h3>{{group.name}}</h3>
          <ul class="list-inline" ng-show="user.id == group.main_user.id || user.isGranted('ROLE_SUPER_ADMIN')">
            <li><a href="{{$state.href('spm.group.edit',{groupId: group.id})}}">Editer</a></li>
            <li><a ng-click="repoDelete(group);">Supprimer</a></li>
          </ul>
          <ul class="list-inline">
            <li ng-show="group.public">Public</li>
            <li ng-show="!group.public">Priv√©</li>
            <li ng-show="group.openned">Ouvert</li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="linen">
  <div class="row">
    <div class="col-md-12">
      <div class="well">
      <h4>Operations</h4>
        <ul class="nav nav-pills">   
          <li><a href="{{$state.href('spm.group.create')}}">Creer un groupe</a></li>
        </ul>
      </div>
    </div>
  </div>
</div>
{% endverbatim %}