{% verbatim %}
<div class="color red first">
  <div class="row">
    <div class="large-12 columns" ng-show="!announcementLoaded">
        <div class="loader">
          <span></span>
          <span></span>
          <span></span>
        </div>
    </div>
    <div ng-repeat="announcement in announcements" class="large-12 columns">
      <div class="panel row marbot-20">
        <div class="large-9 columns">
          <h3>{{announcement.title}}</h3>
          <ul class="inline-list" ng-show="user.isGranted('ROLE_SUPER_ADMIN')">
            <li><a href="{{$state.href('spm.announcement.edit',{announcementId: announcement.id})}}">Editer</a></li>
            <li><a href="{{$state.href('spm.announcement.delete',{announcementId: announcement.id})}}">Supprimer</a></li>
          </ul>
          <p>{{announcement.content}}</p>
        </div>
        <div class="large-3 columns author">
          <img class="avatar" gravatar-src="announcement.user.email" gravatar-size="100"/>
          <h4>{{announcement.user.username}}</h4>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="linen" ng-show="user.isGranted('ROLE_SUPER_ADMIN')">
  <div class="row">
    <div class="large-12 columns">
      <div class="panel">
        <ul class="side-nav">
          <li class="active">Operations</li>
          <li><a href="{{$state.href('spm.announcement.create')}}">Ajouter</a></li>
        </ul>
      </div>
    </div>
  </div>
</div>
{% endverbatim %}