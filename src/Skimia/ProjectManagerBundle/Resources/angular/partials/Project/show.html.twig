{% verbatim %}
<div class="row">
	<div class="large-12 columns">
		<nav class="breadcrumbs">
			<a href="#/projects">Projects</a>
			<a class="current" href="#/project/{{project.id}}">{{project.name}}</a>
		</nav>

		<h2><img class="project-icon" src="https://avatars0.githubusercontent.com/u/4041737?s=140"/>{{project.name}}</h2>
		<div class="e-container">
			<nav>
				<ul>
					<li ng-class="{ active: $state.is('spm.project.show') }"><a href="#/project/{{project.id}}">Summary</a></li>
					<li><a href="http://wiki.skimia-agency.com/index.php?title={{project.name}}">Wiki</a></li>
					<li ng-class="{ active: $state.includes('spm.project.show.bundles') }"><a href="#/project/{{project.id}}/bundles">Code</a></li>
					<li ng-class="{ active: $state.includes('spm.project.show.issues') }"><a href="#/project/{{project.id}}/issues">Issues</a></li>
					<li ng-class="{ active: $state.includes('spm.project.show.files') }"><a href="#/project/{{project.id}}/files">Fichiers</a></li>
					<li ng-class="{ active: $state.includes('spm.project.show.edit') }"><a href="#/project/{{project.id}}/edit">Admin</a></li>
					<li ng-if="$state.includes('spm.project.show.edit')" class="red"><a href="#/project/{{project.id}}/delete">Supprimer</a></li>
				</ul>
			</nav>
	        <div ui-view>
	        	<div class="row project-overview">
	        		<div class="large-9 columns">
	        			<h3>Description</h3>
						<p>{{project.description}}</p>	
					</div>
	        		<div class="large-3 columns">
	        			<div class="project-side">
	        				<h4>Bundles</h4>

	        				<p ng-repeat="bundle in project.bundles"><a href="#/bundle/{{bundle.id}}">{{bundle.name}}</a></p>
	        			</div>
	        		</div>
	        	</div>
	        
			</div>
		</div>
	</div>
</div>
{% endverbatim %}