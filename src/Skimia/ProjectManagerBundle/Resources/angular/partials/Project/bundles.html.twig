{% verbatim %}
<div class="row project-bundles">
  <div class="large-2 columns project-side">
    <h4>Bundles</h4>
    <ul class="side-nav">
     <li><a href="{{$state.href('spm.bundle.create')}}">Ajouter</a></li>
    </ul>
  </div>
  <div class="large-10 columns">
   <article ng-repeat="bundle in project.bundles" class="bundle">

    <div ng-if="bundle.projects.length != 0">
      <ul class="inline-list right share">
        <li><i class="fa fa-share"></i></li>
        <li ng-repeat="project in bundle.projects">{{project.name}}</li>
      </ul>
    </div>
    <h4><a href="{{$state.href('spm.bundle.show',{bundleId:bundle.id})}}">{{bundle.name}}</a><hr></h4>
    <p>{{bundle.description}}</p>
    <hr>
    <ul class="inline-list icons">
      <li><a href="{{$state.href('spm.bundle.show.entity.list',{bundleId:bundle.id})}}"><i class="fa fa-archive"></i> {{bundle.entities.length}} Entit√©es</a></li>
      <li><i class="fa fa-cogs"></i> {{bundle.entities.length}} Controlleurs</li>
    </ul>
  </article>
  </div>
</div>
{% endverbatim %}