
{{module_var}}.controller('{{base_name}}.EditController',['$scope','$stateParams', '$state','Relations','mc-service',function($scope, $stateParams, $state, Relations,flash){
	$scope.data = {};
    Relations.get({ relationId:$stateParams.relationId},function(data){
        $scope.data = data;
        $scope.relationEditLoaded = true
    });
    $scope.submit = function(){
        $scope.data.$save(function()
            {
                $state.go('^.^',{},{reload:true});
                flash.add('success','Message success Edit');
            });
    }
}]);

